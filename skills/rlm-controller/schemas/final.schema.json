{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RLM Final Answer",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "content",
    "confidence",
    "citations",
    "gaps",
    "artifacts"
  ],
  "properties": {
    "content": {
      "type": "string",
      "minLength": 1,
      "maxLength": 20000
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "citations": {
      "type": "array",
      "minItems": 0,
      "maxItems": 500,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["claim_id", "sources"],
        "properties": {
          "claim_id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          },
          "sources": {
            "type": "array",
            "minItems": 1,
            "maxItems": 20,
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 512
            }
          }
        }
      }
    },
    "gaps": {
      "type": "array",
      "minItems": 0,
      "maxItems": 200,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 500
      }
    },
    "artifacts": {
      "type": "array",
      "minItems": 0,
      "maxItems": 100,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 512
      }
    }
  }
}
