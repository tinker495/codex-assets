{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RLM Subagent Output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "chunk_id",
    "relevant",
    "summary",
    "confidence",
    "evidence",
    "gaps",
    "errors"
  ],
  "properties": {
    "chunk_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "relevant": {
      "type": "boolean"
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1200
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "evidence": {
      "type": "array",
      "minItems": 0,
      "maxItems": 50,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["loc", "quote", "note"],
        "properties": {
          "loc": {
            "type": "string",
            "pattern": "^.+:[0-9]+-[0-9]+$",
            "maxLength": 512
          },
          "quote": {
            "type": "string",
            "minLength": 1,
            "maxLength": 320
          },
          "note": {
            "type": "string",
            "minLength": 1,
            "maxLength": 400
          }
        }
      }
    },
    "gaps": {
      "type": "array",
      "maxItems": 30,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 240
      }
    },
    "errors": {
      "type": "array",
      "maxItems": 30,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 240
      }
    }
  }
}
